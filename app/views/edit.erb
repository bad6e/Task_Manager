  <input type="hidden" name="_method" value = "PUT" />
  <input type="text"   name="task[title]" value="<%= @task.title %>"/><br/>
  <textarea name="task[description]"><%= @task.description %></textarea><br/>
  <button class = "btn btn-primary">Submit</button>

</form>